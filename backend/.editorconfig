# EditorConfig file - see https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{c,cpp,h}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.{js,html}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
